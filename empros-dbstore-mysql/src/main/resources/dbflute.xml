<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans
    PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd"
>
<beans>
    <!-- The components of DBFlute Runtime. -->
    <bean id="introduction" class="org.codelibs.empros.db.allcommon.DBFluteInitializer">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
    </bean>
    <bean id="invokerAssistant" class="org.codelibs.empros.db.allcommon.ImplementedInvokerAssistant" autowire="byType">
        <property name="dataSource"><ref bean="dataSource"/></property>
        <property name="introduction"><ref bean="introduction"/></property>
    </bean>
    <bean id="commonColumnAutoSetupper" class="org.codelibs.empros.db.allcommon.ImplementedCommonColumnAutoSetupper" autowire="byType"/>
    <bean id="behaviorSelector" class="org.codelibs.empros.db.allcommon.ImplementedBehaviorSelector" autowire="byType"/>
    <bean id="behaviorCommandInvoker" class="org.seasar.dbflute.bhv.core.BehaviorCommandInvoker" autowire="byType">
        <property name="invokerAssistant"><ref bean="invokerAssistant"/></property>
    </bean>

    <!-- The components of Behavior. -->
	<bean id="persistentEventBhv" class="org.codelibs.empros.db.exbhv.PersistentEventBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
	<bean id="persistentEventValueBhv" class="org.codelibs.empros.db.exbhv.PersistentEventValueBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
</beans>
