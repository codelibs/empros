<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dbStore" class="org.codelibs.empros.store.DatabaseStore">
	</bean>

	<bean id="persistentProcessor" class="org.codelibs.empros.processor.PersistentProcessor">
		<property name="dataStore">
			<ref bean="dbStore"/>
		</property>
	</bean>
	<bean id="loggingProcessor" class="org.codelibs.empros.processor.LoggingProcessor">
	</bean>

	<bean id="eventProcessor" class="org.codelibs.empros.processor.ParallelProcessor">
		<constructor-arg>
			<list>
				<ref bean="persistentProcessor" />
				<ref bean="loggingProcessor" />
			</list>
		</constructor-arg>
		<constructor-arg>
			<value>10</value>
		</constructor-arg>
	</bean>

</beans>
